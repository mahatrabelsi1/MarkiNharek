<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, Guest!"
            android:textColor="#111827"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
        <!-- Greeting Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good morning ☀️, I believe in youuu! "
            android:textColor="#111827"
            android:textSize="18sp"
            android:layout_marginBottom="16dp"
            android:textStyle="bold" />

        <!-- Today's Report -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today's Report"
            android:textColor="#111827"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Training Goal and Checklist -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Training Goal -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#EDE9FE"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Progress"
                    android:textColor="#6B21A8"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6B21A8"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:id="@+id/daily_score_text"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Checklist -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checklist"
                    android:textColor="#111827"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <RadioButton
                    android:id="@+id/radio_exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercise for 30 minutes"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radio_meditate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditate for 5 minutes"
                    android:textColor="#111827" />

                <RadioButton
                    android:id="@+id/radio_drink_water"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Drink 8 glasses of water"
                    android:textColor="#111827" />
            </LinearLayout>
        </LinearLayout>

        <!-- Habit Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2">

            <!-- Study Button -->
            <ImageButton
                android:id="@+id/button_study"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_study"
                android:contentDescription="Study"
                android:scaleType="centerInside" />

            <!-- Sleep Button -->
            <ImageButton
                android:id="@+id/button_sleep"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_sleep"
                android:contentDescription="Sleep"
                android:scaleType="centerInside" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <!-- Fitness Training Button -->
            <ImageButton
                android:id="@+id/button_fitness"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_fitness"
                android:contentDescription="Fitness Training"
                android:scaleType="centerInside" />

            <!-- Drink Water Button -->
            <ImageButton
                android:id="@+id/button_water"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:background="@drawable/button_background"
                android:src="@drawable/ic_water"
                android:contentDescription="Drink Water"
                android:scaleType="centerInside" />
        </LinearLayout>

        <!-- Summary of the Week Button -->
        <Button
            android:id="@+id/button_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary of the Week"
            android:textColor="#FFFFFF"
            android:background="#111827"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Force sync data"
            android:textColor="#FFFFFF"
            android:background="#111827"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
